<% layout("/layouts/boilerplate") %>

<body>
    <form action="/contact" method="POST">
        <div class="contact-container">
            <div class="contact-div">
                <h4><b>Contact Us</b></h4>
                <hr>
                <div class="contact-input mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input name = "cname" type="text" class="form-control" id="name" placeholder="name" required>
                </div>
                <div class="contact-input mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name = "cemail" type="email" class="form-control" id="email" placeholder="xyz@example.com" required>
                </div>
                <div class="contact-input mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea name = "cmsg" class="form-control" id="message" rows="3" placeholder="message..!" required></textarea>
                </div>
                <div class="connect-div">
                        <button class="btn btn-success">Submit</button>
                    <div class="follow-div">
                        <a href="https://www.linkedin.com/in/krishna-muskawad"><i class="fa-brands fa-linkedin"></i></a>
                        <a href="https://github.com/KrishnaM0"><i class="fa-brands fa-github"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br><br><br>
</body>